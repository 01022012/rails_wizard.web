<h1>Javascript Framework</h1>
<% for recipe in Recipe.for('javascript') %>
  <section class='field radio'>
    <%= f.radio_button :javascript, recipe.slug %>
    <%= f.label "javascript_#{recipe.slug}", recipe.name %>
    <%= f.label "javascript_#{recipe.slug}", recipe.description, :class => 'help'%>
  </section>
<% end %>