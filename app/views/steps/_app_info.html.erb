<h1 id='section_publish'>Publish Template</h1>

<div class='field check'>
  <%= f.check_box :listed %>
  <%= f.label :listed, "List Template in Directory?"%>
  <%= f.label :listed, "If you would like to share this template with others, check this box!", :class => 'help' %>
</div>

<div class='field text'>
  <%= f.label :name, 'Template Name:' %>
  <%= f.label :name, "Give this template a name. This is just for your own reference.", :class => 'help' %>
  <%= f.text_field :name, :placeholder => 'Template Name' %>
</div>

<div class='field text'>
  <%= f.label :slug, 'Template URL:' %>
  <%= f.label :slug, "Choose a URL for your template. Note, private templates should have obscure URLs.", :class => 'help' %>
  <%= f.text_field :slug, :placeholder => 'Template URL' %>
</div>

<div class='field text'>
  <%= f.label :description, "Description"%>
  <%= f.label :description, "Some (Markdown) text about your template. Will be displayed in the directory and/or on your template's homepage.", :class => 'help' %>  
  <%= f.text_area :description %>
</div>